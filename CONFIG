# Manjaro desktop
sudo pacman -Rdd manjaro-gdm-theme manjaro-gdm-branding
logout
cd /usr/share/gnome-shell
sudo mv gnome-shell-theme.gresource gnome-shell-theme.gresource.manjaro
sudo mv gnome-shell-theme.gresource.old gnome-shell-theme.gresource
reboot


# i3
sudo chown michael:michael ~/.config/i3/brightness
setxkbmap -option compose:menu


# Fonts
Intf: Noto Sans R			10
Docs: Times New Roman		10
Mono: Iosevka R				10
WinT: Noto Sans R			10
---
Hinting: Full
Antialiasing: Standard
---
Rendering:
https://wiki.manjaro.org/index.php?title=Improve_Font_Rendering


# Default terminal
  sudo update-alternatives --config x-terminal-emulator


# Git
git config --global user.email "barsukov.m23@gmail.com"
git config --global user.name "Michael Barsukov"
