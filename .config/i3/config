# i3-gaps configuration file

set $exec_noid exec --no-startup-id
set $exec_aw_noid exec_always --no-startup-id
set $mod Mod4
floating_modifier $mod

font pango:JetBrains Mono 9

# essentials
bindsym $mod+w kill
bindsym $mod+Return exec alacritty
bindsym $mod+Escape exec sh lock
bindsym $mod+Mod1+Escape exec power


bindsym $mod+d exec rofi-launcher
bindsym $mod+c exec rofi-greenclip
bindsym $mod+e exec rofi-splatmoji

# screenshots
bindsym Print exec screenshot
bindsym Shift+Print exec flameshot gui

# brightness & sound
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 && canberra-gtk-play -i bell
bindsym XF86MonBrightnessDown exec  xbacklight -dec 5 && canberra-gtk-play -i bell
bindsym XF86AudioRaiseVolume exec pamixer -i 5 && canberra-gtk-play -i message
bindsym XF86AudioLowerVolume exec pamixer -d 5 && canberra-gtk-play -i message
bindsym XF86AudioPlay exex playerctl play-pause
bindsym XF86AudioMute exec pamixer -t


# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

focus_follows_mouse no

# move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split side 
bindsym $mod+semicolon split h
bindsym $mod+v split v

# modes
# bindsym $mod+s layout stacking
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout toggle split
bindsym $mod+t layout tabbed
bindsym $mod+Shift+f floating toggle

# workspaces
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

# workspace navigation
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# moving windows between workspaces
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}


# colors
# class                  border  backgr. text    indicator child_border
client.focused           #928373 #928373 #ebdbb2 #928373   #928373
client.urgent            #928373 #928373 #ebdbb2 #928373   #928373
client.focused_inactive  #928373 #272727 #ebdbb2 #272727   #272727 
client.unfocused         #272727 #272727 #928373 #292d2e   #222222
client.background        #272727 


# autostart
exec xss-lock -- lock
exec greenclip daemon &
exec_always greenclip clear
exec_always xrdb merge ~/.Xresources
$exec_aw_noid autotiling &

exec picom &
exec_always sh ~/.config/polybar/launch.sh &
$exec_aw_noid sh ~/.fehbg

$exec_noid dunst -config ~/.config/dunst/dunstrc &
exec_always nmcli connection up Barsik_2
$exec_aw_noid pamixer -u
$exec_noid numlockx &
$exec_noid xfce4-power-manager &


# windows
for_window [class=".*"] border pixel 1
gaps inner 20
gaps outer 30
assign [class="firefox"] $ws1
assign [class="TelegramDesktop"] $ws4
for_window [class="SpeedCrunch"] floating enable
