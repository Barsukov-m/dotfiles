#!/bin/bash

B='#00000000'  # blank
C='#ebdbb222'  # clear
D='#ebdbb2cc'  # default
T='#ebdbb2ff'  # text
V='#ebdbb2ff'  # verification
W='#d79920bb'  # wrong

i3lock -c "#272727" -e --keylayout 1\
    --time-font=monospace\
    --date-font=monospace\
    --layout-font=monospace\
    --verif-font=monospace\
    --wrong-font=monospace\
    --greeter-font=monospace\
    --insidever-color=$C\
    --ringver-color=$V\
    --insidewrong-color=$C\
    --ringwrong-color=$W\
    --inside-color=$B\
    --ring-color=$D\
    --line-color=$B\
    --separator-color=$D\
    --verif-color=$T\
    --wrong-color=$T\
    --time-color=$T\
    --date-color=$T\
    --layout-color=$T\
    --keyhl-color=$W\
    --bshl-color=$W\
    --time-str="%H:%M"\
    --date-str="%A, %m %Y"\
    --verif-text="..."\
    --wrong-text="Try again"\
    --lock-text=""\
    --lockfailed-text=""\
    --radius=120\
    --ring-width=3
