#!/bin/bash

B='#00000000'  # blank
T='#ebdbb2'  # text
V='#989719'  # verif
W='#fb4833'  # wrong

i3lock -c "#272727" -e --keylayout 1\
    --time-font=monospace\
    --date-font=monospace\
    --layout-font=monospace\
    --verif-font=monospace\
    --wrong-font=monospace\
    --greeter-font=monospace\
    --time-size=30\
    --date-size=14\
    --layout-size=14\
    --verif-size=14\
    --wrong-size=20\
    --greeter-size=14\
    --insidever-color=$B\
    --ringver-color=$B\
    --insidewrong-color=$B\
    --ringwrong-color=$W\
    --inside-color=$B\
    --ring-color=$B\
    --line-color=$B\
    --separator-color=$B\
    --verif-color=$T\
    --wrong-color=$T\
    --time-color=$T\
    --date-color=$T\
    --layout-color=$T\
    --keyhl-color=$V\
    --bshl-color=$V\
    --time-str="%H:%M"\
    --date-str="Type your password..."\
    --verif-text="..."\
    --wrong-text="Nah"\
    --lock-text=""\
    --no-modkey-text \
    --lockfailed-text=""\
    --radius=110\
    --ring-width=3
