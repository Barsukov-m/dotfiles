#!/bin/bash

IMAGE=~/Pictures/Wallpapers/lock-min.jpg

B='#00000000'  # blank
C='#ffffff22'  # clear
D='#ffffffcc'  # default
T='#ffffffff'  # text
V='#ffffffff'  # verification
W='#77dd11bb'  # wrong

i3lock -i $IMAGE -e --keylayout 1\
    --insidever-color=$C\
    --ringver-color=$V\
    --insidewrong-color=$C\
    --ringwrong-color=$W\
    --inside-color=$B\
    --ring-color=$D\
    --line-color=$B\
    --separator-color=$D\
    --verif-color=$T\
    --wrong-color=$T\
    --time-color=$T\
    --date-color=$T\
    --layout-color=$T\
    --keyhl-color=$W\
    --bshl-color=$W\
    --time-str="%H:%M"\
    --date-str="%A, %m %Y"\
    --verif-text="..."\
    --wrong-text="Try again"\
    --lock-text=""\
    --lockfailed-text=""\
    --radius=100\
    --ring-width=5
